{
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "next lint",
    "lint:css": "stylelint src/**/*.{css,scss}",
    "format": "prettier --write --ignore-path .gitignore './**/*.{js,jsx,ts,tsx,json}'",
    "format:css": "stylelint src/**/*.{css,scss} --fix"
  },
  "husks": {
    "hooks": {
      "pre-commit": "npm run lint && npm run lint:css && npm run format && npm run format:css",
      "pre-push": "npm run lint && npm run lint:css && npm run format && npm run format:css"
    }
  },
  "dependencies": {
    "next": "latest",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^12.12.21",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "eslint": "^8.6.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "sass": "^1.47.0",
    "stylelint": "^14.2.0",
    "stylelint-config": "^0.1.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "4.0"
  }
}
